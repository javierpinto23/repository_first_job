/** THIS IS QUERY EXAMPLE WITH AGGREGATIONS **/

GET /inddxs_bame/_search
{
  "size": 0,
  "query": {
    "bool": {
      "must": [],
      "filter": [
        {
          "range": {
            "date_order_created_omni": {
              "format": "strict_date_optional_time",
              "gte": "now-4h",
              "lte": "now-10m"
            }
          }
        },
        {
          "match_phrase": {
            "status_desc": "Cancelled"
          }
        },
        {
          "exists": {
            "field": "orig_ordered_qty"
          }
        },
        {
          "exists": {
            "field": "cancelled_qty"
          }
        }
      ],
      "should": [],
      "must_not": []
    }
  },
  "aggs": {
    "group_by_market": {
      "terms": {
        "field": "tags"
      },
      "aggs": {
        "sum_orig_qty": {
          "sum": {
            "field": "orig_ordered_qty"
          }
        },
        "sum_cancelled_qty": {
          "sum": {
            "field": "cancelled_qty"
          }
        },
        "calculo_division": {
          "bucket_script": {
            "buckets_path": {
              "totalField1": "sum_cancelled_qty",
              "totalField2": "sum_orig_qty"
            },
            "script": "Math.round(100*params.totalField1 / params.totalField2)"
          }
        }
      }
    }
  }
} 